<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto p-8 mt-10 max-w-6xl">
        <h2 class="text-3xl font-semibold text-red-600 text-center mb-8">My Bookings</h2>
        <% Bookings.forEach(home => { %>
            <div class="mb-6">
                <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
                    <div class="flex justify-between items-center mb-4">
                        <div>
                            <span class="font-semibold text-lg text-gray-800"><%= home.timeSlot %></span>
                            <span class="text-red-700 ml-2"><%= home.guestName %></span>
                        </div>
                        <div>
                            <span class="text-green-700 font-medium">Table [<%= home.tableName %>] - <%= home.CapacityCovers %> Guests</span>
                        </div>
                    </div>

                    <div class="flex justify-end space-x-2">
                        <a href="/store/edit-book-table/<%= home.id %>?editing=true" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md text-sm transition duration-300">Edit Details</a>
                        <form action="/delete-reservation/<%= home.id %>" method="POST" class="inline-block">
                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-md text-sm transition duration-300">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </main>
</body>

  </html>