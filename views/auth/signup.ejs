<%- include('../partials/head') %>
</head>

<body>
  <%- include('../partials/nav') %>
  <div class="container mx-auto p-8 mt-10 max-w-2xl bg-white rounded-lg shadow-md">
    <h1 class="text-3xl font-semibold mb-6 text-center text-gray-800">Sign up</h1>

    <% if (typeof errorMessages !== 'undefined' && errorMessages && errorMessages.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <ul class="list-disc list-inside space-y-1">
          <% errorMessages.forEach(error => { %>
            <li><%= error %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <form action="/signup" method="POST" class="max-w-md mx-auto">

      <div class="mb-4">
        <label for="firstname" class="block text-sm font-medium text-gray-700">First Name</label>
        <input type="text" name="firstname" id="firstname" placeholder="Enter your First Name"
          value="<%= typeof oldInput !== 'undefined' ? oldInput.firstname : '' %>"
          class="mt-1 p-2 w-full border rounded-md bg-gray-100" />
      </div>
      <div class="mb-4">
        <label for="lastname" class="block text-sm font-medium text-gray-700">Last Name</label>
        <input type="text" name="lastname" id="lastname" placeholder="Enter your Last Name"
          value="<%= typeof oldInput !== 'undefined' ? oldInput.lastname : '' %>"
          class="mt-1 p-2 w-full border rounded-md bg-gray-100" />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email" name="email" id="email" placeholder="Enter your email"
          value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>"
          class="mt-1 p-2 w-full border rounded-md bg-gray-100" />
      </div>

      <div class="mb-4">
        <label for="password" class="block text-sm font-medium text-gray-700">password</label>
        <input type="password" name="password" id="password" placeholder="Enter your password"
          value="<%= typeof oldInput !== 'undefined' ? oldInput.password : '' %>"
          class="mt-1 p-2 w-full border rounded-md bg-gray-100" />
      </div>
      <div class="mb-4">
        <label for="confirm_password" class="block text-sm font-medium text-gray-700">Confrim Password</label>
        <input type="password" name="confirm_password" id="confirm_password" placeholder="Confirm password"
          value="<%= typeof oldInput !== 'undefined' ? oldInput.confirm_password : '' %>"
          class="mt-1 p-2 w-full border rounded-md bg-gray-100" />
      </div>

      <div class="mb-4">
        <p>User Type:</p>
        <label for="userType" class="block text-sm font-medium text-gray-700">
          <input type="radio" name="userType" value="guest" <%= typeof oldInput !== 'undefined' && oldInput.userType === 'guest' ? 'checked' : '' %>> Guest</label>
        <label for="userType" class="block text-sm font-medium text-gray-700">
          <input type="radio" name="userType" value="host" <%= typeof oldInput !== 'undefined' && oldInput.userType === 'host' ? 'checked' : '' %>> Host</label><br><br>
      </div>
      <div class="mb-4">
        <label><input type="checkbox" name="termsAccepted" required> I accept the terms and conditions</label><br><br>
      </div>

      <div class="text-center">
        <button type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md text-sm transition duration-300">
          Signup
        </button>
      </div>
    </form>
  </div>
</body>

</html>